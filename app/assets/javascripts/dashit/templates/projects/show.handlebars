<div class="floating">
  <dt>
    {{#if isEditing}}
      {{view DashIt.EditProjectView}}
    {{else}}
      <p>{{project.name}}</p>
      {{#if displayTodos}}
        {{view DashIt.ProjectTodosView todosBinding="project.todos"}}
      {{/if}}
    {{/if}}
    <div class="commands">
      {{#unless isEditing}}
        <a href="#" {{action "toggleTodos"}}>todos</a>
        <a href="#" {{action "showEdit"}}>edit</a>
        <a href="#" {{action "destroyRecord"}}>delete</a>
      {{/unless}}
    </div>
  </dt>
</div>
